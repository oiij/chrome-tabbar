{
  "name": "@oiij/chrome-tabs",
  "type": "module",
  "version": "0.0.1",
  "description": "",
  "author": "oiij",
  "license": "MIT",
  "homepage": "https://github.com/oiij/chrome-tabs",
  "repository": {
    "type": "git",
    "url": "git@github.com:oiij/chrome-tabs.git"
  },
  "bugs": "https://github.com/oiij/chrome-tabs/issues",
  "keywords": [
    "chrome-tabs"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/index.css"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc --noEmit && vite build",
    "docs:dev": "vitepress dev .docs",
    "docs:build": "vitepress build .docs",
    "docs:preview": "vitepress preview .docs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "release": "bumpp -r && npm publish --access public",
    "awe": "pnpx are-we-esm",
    "nmi": "pnpx node-modules-inspector",
    "start": "esno src/index.ts",
    "test": "vitest",
    "update:deps": "taze -w && pnpm i",
    "type:check": "tsc --noEmit",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "link": "pnpm link --global",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@oiij/use": "^0.0.1",
    "colord": "^2.9.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.1",
    "@iconify-json/line-md": "^1.2.5",
    "@iconify-json/ri": "^1.2.5",
    "@oiij/tsconfig": "^0.0.1",
    "@types/node": "^22.13.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/ui": "^3.0.5",
    "bumpp": "^10.0.2",
    "commitlint": "^19.7.1",
    "cz-git": "^1.11.0",
    "czg": "^1.11.0",
    "eslint": "^9.20.0",
    "eslint-plugin-format": "^1.0.1",
    "esno": "^4.8.0",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "taze": "^18.4.0",
    "tsup": "8.3.6",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "unocss": "^65.4.3",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vitepress": "^1.6.3",
    "vitest": "^3.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
